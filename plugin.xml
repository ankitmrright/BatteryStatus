<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-kaaryaa-batterystatus" version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>BatteryStatus</name>
    <js-module name="BatteryStatus" src="www/BatteryStatus.js">
        <clobbers target="BatteryStatus" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="BatteryStatus">
                <param name="android-package" value="cordova.plugin.kaaryaa.batterystatus.BatteryStatus" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml" />
        <source-file src="src/android/BatteryStatus.java" target-dir="src/cordova/plugin/kaaryaa/batterystatus/BatteryStatus" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="BatteryStatus">
                <param name="ios-package" value="BatteryStatus" />
            </feature>
        </config-file>
        <source-file src="src/ios/BatteryStatus.m" />
    </platform>
</plugin>